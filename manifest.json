{
  "name": "Keyboard Navigation",
  "version": "1.0.0",
  "description": "Keyboard control for mouse actions in webpages",
  "manifest_version": 2,
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "start-session": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Ctrl+I"
      },
      "description": "Start extension session"
    }
  },
  "options_page": "pages/options.html",
  "web_accessible_resources": ["/content-scripts/overlayCss.css"]
}
